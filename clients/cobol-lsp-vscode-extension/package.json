{
    "name": "cobol-language-support",
    "displayName": "COBOL Language Support",
    "description": "COBOL Language Support standardizes the communication between language tooling and your code editor using the Language Server Protocol (LSP).",
    "author": "Broadcom",
    "license": "EPL-2.0",
    "version": "0.10.0",
    "preview": false,
    "publisher": "BroadcomMFD",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eclipse/che-che4z-lsp-for-cobol.git"
    },
    "bugs": {
        "url": "https://github.com/eclipse/che-che4z-lsp-for-cobol/issues"
    },
    "keywords": [
		"mainframe", "lsp", "cobol", "z/os", "zos", "language-server", "jcl"
	],
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:COBOL"
    ],
    "icon": "resources/logo.png",
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "COBOL",
                "extensions": [
                    ".cbl",
                    ".cpy",
                    ".cob"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest -w 1"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/node": "^12.6.2",
        "jest": "^24.9.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^3.5.3",
        "vscode": "^1.1.33"
    }
}
