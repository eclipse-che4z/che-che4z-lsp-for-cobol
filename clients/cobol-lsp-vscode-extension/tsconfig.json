{
  "compilerOptions": {
    "types": ["node", "jest", "mocha"],
    "target": "ES2017",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "strict": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "server", ".vscode-test"]
}
