{
  "name": "cobol-language-support-for-idms",
  "displayName": "COBOL Language Support for IDMS",
  "description": "Autocomplete, highlighting and diagnostics for IDMS COBOL code and copybooks",
  "author": "Broadcom",
  "license": "EPL-2.0",
  "version": "1.0.2",
  "preview": false,
  "publisher": "BroadcomMFD",
  "keywords": [
    "idms",
    "dml",
    "idms-dml",
    "ibm",
    "cobol",
    "mainframe",
    "zowe",
    "lsp",
    "zos",
    "z/os"
  ],
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse/che-che4z-lsp-for-cobol.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse/che-che4z-lsp-for-cobol/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:cobol"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "grammars": [
      {
        "injectTo": ["source.cobol"],
        "scopeName": "idms.injection",
        "path": "./syntaxes/idms.injection.json"
      }
    ],
    "configuration": {
      "title": "COBOL Dialect Support for IDMS",
      "properties": {
        "cobol-lsp.cpy-manager.idms.paths-local": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Default list of local paths to search for IDMS copybooks",
          "uniqueItems": true
        },
        "cobol-lsp.cpy-manager.idms.paths-dsn": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Default list of datasets to search for IDMS copybooks\nZowe Explorer version 1.15.0 or higher is required to download copybooks from the mainframe",
          "uniqueItems": true
        },
        "cobol-lsp.cpy-manager.idms.paths-uss": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Default list of USS paths to search for IDMS copybooks\nZowe Explorer version 1.15.0 or higher is required to download copybooks from the mainframe",
          "uniqueItems": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --sourcemap --target=node16.17.1,chrome108 --outdir=dist --external:vscode --format=cjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "pretty": "prettier -w .",
    "lint": "prettier -c . && eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "2.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.28.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "prettier": "2.8.7",
    "ts-jest": "^29.0.1",
    "tslint": "^5.18.0",
    "typescript": "5.0.4"
  },
  "extensionDependencies": [
    "BroadcomMFD.cobol-language-support"
  ],
  "dependencies": {
    "@code4z/cobol-dialect-api": "file:../cobol-dialect-api"
  }
}
